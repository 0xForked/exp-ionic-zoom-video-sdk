<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:gravity="center_horizontal"
  android:orientation="vertical">
  <TextView
    android:id="@+id/remoteUserName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/remote_user_name"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:textStyle="normal" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:background="@drawable/rounded_session_countdown_timer_background"
    android:paddingHorizontal="11dp"
    android:paddingVertical="5dp">

    <TextView
      android:id="@+id/sessionCountingTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/session_time_counting_down"
      android:textColor="@color/white"
      android:textSize="19sp" />
  </LinearLayout>
</LinearLayout>
